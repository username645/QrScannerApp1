<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.QrScannerApp" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- НОВЫЙ СТИЛЬ ДЛЯ ПРАВИЛЬНОЙ ЗАСТАВКИ (SPLASH SCREEN) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Цвет фона для системной заставки (делаем его черным) -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <!-- Наша иконка, которая будет в центре -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Тема, которая включится ПОСЛЕ заставки -->
        <item name="postSplashScreenTheme">@style/Theme.QrScannerApp</item>
    </style>

</resources>